<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}">
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Margin="276,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
        <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="277,145,0,0" VerticalAlignment="Top" Width="161"/>
        <Button x:Name="SignInButton" Content="Sign in" HorizontalAlignment="Left" Margin="399,188,0,0" VerticalAlignment="Top" Click="SignInButton_Click"/>
        <Label Content="FACEBOOK " HorizontalAlignment="Left" Margin="255,38,0,0" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" Foreground="White" Width="279" FontWeight="Bold" FontFamily="Bodoni MT Black" FontSize="36"/>
    </Grid>
</Window>
